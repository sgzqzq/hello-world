<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>随机生成rgba颜色</title>
    <style>
        body{
            margin: 0;
        }
        .box{
            width: 200px; height: 200px;
        }
        .box2{
            position: relative;
            left: 100px; top: 100px;
        }
    </style>
</head>
<body>
<div class="box box1"><div class="box box2"><div class="box box2"></div></div></div>

<script>
    var rgba='rgba(';
    for(var i=0;i<3;i++){
        var random_num=Math.floor(Math.random()*256);
        rgba+=random_num+',';
    }
    var opacity=Math.floor(Math.random()*101)/100;
    rgba+=opacity+')';
    console.log(rgba);

    var box=document.querySelectorAll('.box');
    for(var i=0;i<box.length;i++){
        box[i].style.backgroundColor=rgba;
    }
</script>
</body>
</html> 
